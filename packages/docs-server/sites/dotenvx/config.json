{
  "name": "dotenvx",
  
  "displayName": "dotenvx Documentation",
  
  "baseUrl": "https://dotenvx.com/docs/",
  
  "discovery": {
    "strategy": "sitemap",
    "sitemapUrl": "https://dotenvx.com/sitemap.xml"
  },
  
  "crawl": {
    "strategy": {
      "type": "bfs",
      "maxDepth": 3,
      "maxPages": 500,
      "includeExternal": false
    },
    
    "includePatterns": ["/docs/"],
    
    "excludePatterns": [],
    
    "contentTypes": ["text/html"],
    
    "stream": false,
    
    "delay": 1.0,
    
    "timeout": 30,
    
    "jsEnabled": true,
    
    "waitForSelector": "main",
    
    "respectRobots": true,
    
    "headers": {
      "User-Agent": "MCP-Docs-Server/1.0"
    },
    
    "preferSimple": true
  },
  
  "extraction": {
    "selector": "main",
    
    "excludeSelectors": [
      "nav",
      "header", 
      "footer",
      ".navbar",
      ".sidebar",
      ".navigation",
      ".breadcrumb",
      ".edit-page-link",
      ".docs-prevnext"
    ]
  },
  
  "cleaners": [
    "removeEmptyLines",
    "normalizeWhitespace",
    "extractCodeBlocks",
    "removeExcessiveNewlines",
    "removeDuplicateHeaders",
    "extractMetadata"
  ],
  
  "chunking": {
    "strategy": "semantic",
    "maxSize": 800,
    "overlap": 200,
    "minSize": 10
  },
  
  "embedding": {
    "model": "text-embedding-3-small",
    "dimensions": 1536
  }
}