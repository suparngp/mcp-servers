{
  "name": "mcp",
  "displayName": "Model Context Protocol",
  "baseUrl": "https://modelcontextprotocol.io",
  "discovery": {
    "strategy": "sitemap",
    "sitemapUrl": "https://modelcontextprotocol.io/sitemap.xml"
  },
  "crawl": {
    "strategy": {
      "type": "bfs",
      "maxDepth": 1,
      "maxPages": 2000,
      "includeExternal": false
    },
    "contentTypes": ["text/html"],
    "stream": false,
    "delay": 1.0,
    "timeout": 30,
    "jsEnabled": true,
    "waitForSelector": "main",
    "respectRobots": true,
    "headers": {
      "User-Agent": "MCP-Docs-Server/1.0"
    },
    "preferSimple": true
  },
  "extraction": {
    "selector": "main",
    "excludeSelectors": [
      "nav",
      "header",
      "footer",
      ".navbar",
      ".sidebar",
      ".navigation",
      ".breadcrumb",
      ".edit-page-link",
      ".docs-prevnext"
    ]
  },
  "cleaners": [
    "removeEmptyLines",
    "normalizeWhitespace",
    "extractCodeBlocks",
    "removeExcessiveNewlines",
    "removeDuplicateHeaders",
    "extractMetadata"
  ],
  "chunking": {
    "strategy": "semantic",
    "maxSize": 800,
    "overlap": 200,
    "minSize": 10
  },
  "embedding": {
    "model": "text-embedding-3-small",
    "dimensions": 1536
  }
}
